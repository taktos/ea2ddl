    protected ${glInvokeNameResultName} extractInvokeName(${glInvokeNameExtractingResourceName} resource, StackTraceElement[] stackTrace) {
        final ${glInvokeNameExtractorImplName} extractor = new ${glInvokeNameExtractorImplName}();
        extractor.setStackTrace(stackTrace);
        return extractor.extractInvokeName(resource);
